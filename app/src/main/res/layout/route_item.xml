<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_3"
    android:id="@+id/route_item">

    <ImageView
        android:id="@+id/route_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@mipmap/route_select_bg"/>

    <ImageView
        android:id="@+id/region_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/route_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_toLeftOf="@+id/wifi_icon"
        android:layout_toRightOf="@+id/region_icon"
        android:layout_centerVertical="true"
        android:textColor="@color/grey_89"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/wifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_88"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/wifi_5"/>

    <TextView
        android:id="@+id/route_delay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/empty"
        android:textColor="@color/grey_89"
        android:textSize="18sp" />
</RelativeLayout>